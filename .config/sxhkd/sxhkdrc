alt + Return
	$TERMINAL

alt + p
	dmenu_run

alt + d
    passmenu && notify-send -u normal -t 3000 "Password copied"

alt + shift + d
	clearclipboard && notify-send -u normal -t 3000 "Clipboard deleted"

alt + shift + q
    sysact

alt + x
    slock -m "$(fortune | cowsay)"

Print
	scrot 'Screenshot-%Y-%m-%d-%H:%M:%S.png' -e 'mv $f ~/' && notify-send -u normal -t 3000 "Screenshot taken"

super + shift + {l,j,k}
	playerctl {play-pause,next,previous}

alt + shift + {l,j,k}
	mpc {toggle,next,prev}

alt + o; {b,m,v,n,r}
	{$BROWSER, $TERMINAL -e neomutt, virt-manager, $TERMINAL -e ncmpcpp, $TERMINAL -e newsboat}

XF86Audio{RaiseVolume,LowerVolume,Mute}
	{pulsemixer --change-volume +1,pulsemixer --change-volume -1,pulsemixer --toggle-mute }; refreshbar

XF86MonBrightness{Up,Down}
	light {-A 1, -U 1}; refreshbar

alt + s
    songstatus
