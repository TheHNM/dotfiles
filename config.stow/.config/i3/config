# =============================================================================

# ----- i3gaps settings -----
for_window [class="^.*"] border pixel 2
gaps inner 5
gaps outer 5
smart_borders on

# ----- Start on login -----
exec_always --no-startup-id nm-applet
exec_always --no-startup-id nitrogen --restore &
exec_always --no-startup-id eval `ssh-agent`
exec --no-startup-id compton
exec --no-startup-id dunst
exec --no-startup-id udiskie &
exec_always --no-startup-id $HOME/.config/polybar/launch.sh

# ===== KEYBINDINGS =====

# ----- Clear clipboard -----
bindsym $mod+x exec --no-startup-id $HOME/.clear_clipboard.sh && notify-send "Clipboard deleted" -u normal

# ----- Lock screen -----
bindsym $mod+Shift+x exec --no-startup-id betterlockscreen -l blur

# ----- Audio control -----
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +1%; exec --no-startup-id pkill -RTMIN+10 i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -1%; exec --no-startup-id pkill -RTMIN+10 i3blocks
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle; exec --no-startup-id pkill -RTMIN+10 i3blocks

# ----- cmus control -----
bindsym Shift+Mod1+p exec --no-startup-id cmus-remote -u
bindsym Shift+Mod1+n exec --no-startup-id cmus-remote -n && exec $HOME/.config/polybar/cmus_notify.sh
bindsym Shift+Mod1+m exec --no-startup-id cmus-remote -r && exec $HOME/.config/polybar/cmus_notify.sh

# ----- Audioplayer control -----
bindsym $mod+Shift+p exec --no-startup-id playerctl play-pause
bindsym $mod+Shift+n exec --no-startup-id playerctl next
bindsym $mod+Shift+m exec --no-startup-id playerctl previous

# ----- Screen brightness -----
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 5
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 5

# ----- scrot -----
bindsym $mod+Print exec --no-startup-id scrot 'Screenshot-%Y-%m-%d-%H:%M:%S.png' -e 'mv $f ~/Pictures/' && notify-send "Picture saved to ~/Pictures/" -u low
