# window colors
# class                 border              background         text                indicator
client.focused          $border             $border            $bg                 $border
client.unfocused        $uborder            $uborder           $border             $uborder
client.focused_inactive $uborder            $uborder           $border             $uborder
client.urgent           $color1             $color1            $border             $uborder

