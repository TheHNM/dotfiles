[module/spotify]
type = custom/script
exec = ~/.config/polybar/spotify.sh %artist% - %title%
tail = true
interval = 1
click-left = playerctl previous
click-right = playerctl next
click-middle = playerctl play-pause

label-background = ${colors.color13}
label-padding = 1
label = %output%

format-background = ${colors.color5}
format-prefix = 
format-prefix-padding = 1
format = <label>

