[module/wlan]
type = internal/network

interface = wlp1s0

interval = 5

label-connected =  %essid%
label-disconnected =  Not Connected

[module/eth]
type = internal/network
interface = enp0s31f6
interval = 3.0
label-connected =  Connected
label-disconnected =  Disconnected

format-disconnected =

[module/vpn]
type = custom/script
exec = echo vpn on
exec-if = pgrep -x openvpn
interval = 5
format-underline = ${colors.transparent}
format-prefix = " "
format-prefix-foreground = ${colors.foreground}

[module/time]
type = internal/date
interval = 1.0
date =  %H:%M:%S

[module/date]
type = internal/date
date =  %D
label = %date%

[module/alsa]
type = internal/alsa

master-soundcard = default
speaker-soundcard = default
headphone-soundcard = default

format-volume = <ramp-volume> <label-volume>
format-muted =  0%

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

ramp-headphones-0 = 
ramp-headphones-1 = 

[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_12_00.3.analog-stereo
use-ui-max = true
interval = 1

format-volume = <ramp-volume> <label-volume>
format-muted =  muted

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

ramp-headphones-0 = 
ramp-headphones-1 = 

[module/battery]
type = internal/battery

battery = BAT0

poll-interval = 1

full-at = 95

label-discharging = %percentage%%
label-charging = %percentage%%
label-full = %percentage%%

format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>
format-charging =  <label-charging>

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

[module/spotify]
type = custom/script
exec = ~/.config/polybar/spotify.sh  %artist% - %title%
tail = true
interval = 1
click-left = playerctl previous
click-right = playerctl next
click-middle = playerctl play-pause

[module/cmus]
type = custom/script
exec = ~/.config/polybar/cmus.sh
interval = 1
click-left = cmus-remote -n && bash $HOME/.config/polybar/cmus_notify.sh
click-right = cmus-remote -r && bash $HOME/.config/polybar/cmus_notify.sh
click-middle = cmus-remote -u
