[colors]
background = 0
foreground = #ffffff
border-color = 0
transparent = #00000000

[bar/standart]
width = 100%
height = 27
fixed-center = false

background = ${colors.transparent}
foreground = #ffffff

line-size = 3
line-color = #f00

border-size = 0
border-color = ${colors.transparent}

padding-left = 2
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = UbuntuMono Nerd Font:size=12;3
font-1 = "Font Awesome 5 Free:style=Solid:pixelsize=12;3"
font-2 = "Font Awesome 5 Free:style=Regular:pixelsize=12;3"
font-3 = "Font Awesome 5 Brands:pixelsize=12;3"
font-4 = Source Han Sans JP:size=12;3

modules-left = i3 pulseaudio eth wlan vpn battery time date spotify cmus
modules-center =
modules-right =

;override-redirect = true

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize
bottom = true

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = #ffffff
label-mode-background = #00000000

; focused = Active workspace on focused monitor
label-focused = %icon%
label-focused-background = ${colors.transparent}
label-focused-underline = #5f819d
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %icon%
label-unfocused-padding = 1

; visible = Active workspace on unfocused monitor
label-visible = %icon%
label-visible-background = ${colors.transparent}
label-visible-underline = #000000
label-visible-padding = 1

; urgent = Workspace with urgency hint set
label-urgent = %icon%
label-urgent-background = ${colors.transparent}
label-urgent-underline = #a54242
label-urgent-padding = 1

; Native Vietnamese Numerals
;ws-icon-0 = 1;𠬠
;ws-icon-1 = 2;𠄩
;ws-icon-2 = 3;𠀧
;ws-icon-3 = 4;𦊚
;ws-icon-4 = 5;𠄼
;ws-icon-5 = 6;𦒹
;ws-icon-6 = 7;𦉱
;ws-icon-7 = 8;𠔭
;ws-icon-8 = 9;𠃩
;ws-icon-9 = 10;𨒒

; Chinese Numerals
;ws-icon-0 = 1;一
;ws-icon-1 = 2;二
