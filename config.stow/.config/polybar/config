ws-icon-9 = 10;十

[module/wlan]
type = internal/network
interface = wlp1s0
interval = 5
ramp-signal-0 = 

label-connected = %essid%
label-disconnected = Disconnected

format-connected = <ramp-signal> %{A1:nm-connection-editor:}<label-connected>%{A}
format-disconnected = %{A1:nm-connection-editor:}<label-disconnected>%{A}

[module/eth]
type = internal/network
interface = enp0s31f6
interval = 3.0

ramp-signal-0 = 

label-connected = %local_ip%
label-disconnected = Disconnected

format-connected = <ramp-signal> %{A1:nm-connection-editor:}<label-connected>%{A}
format-disconnected =

[module/vpn]
type = custom/script
exec = echo vpn on
exec-if = pgrep -x openvpn
interval = 1

label =  %output%

[module/date]
type = internal/date
date = %d-%m-%Y %A

label =  %date%

[module/time]
type = internal/date
time = %H:%M:%S
label =  %time%

[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_12_00.3.analog-stereo
use-ui-max = true
interval = 1

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

label-muted = muted

format-volume = <ramp-volume> <label-volume>
format-muted =  <label-muted>

[module/battery]
type = internal/battery
battery = BAT0
poll-interval = 1
full-at = 100

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
; Framerate in milliseconds
animation-charging-framerate = 750

animation-discharging-0 = 
animation-discharging-1 = 
animation-discharging-2 = 
animation-discharging-3 = 
animation-discharging-4 = 
; Framerate in milliseconds
animation-discharging-framerate = 500

label-discharging = %percentage%%
label-charging = %percentage%%
label-full = %percentage%%

format-discharging = <animation-discharging> <label-discharging>
format-full = <ramp-capacity> <label-full>
format-charging = <animation-charging> <label-charging>

[module/spotify]
type = custom/script
exec = ~/.config/polybar/spotify.sh %artist% - %title%
tail = true
interval = 1
click-left = playerctl previous
click-right = playerctl next
click-middle = playerctl play-pause

label = %output%

format =  <label>

[module/backlight]
type = internal/backlight
card = intel_backlight

ramp-0 = 

label = %percentage%%

format = <ramp> <label>

[module/mpd]
type = internal/mpd
host = 127.0.0.1
interval = 1

label-song = %artist% - %title%

label-offline =  mpd is offline

format-online =  <bar-progress> %{A1: urxvt -e ncmpcpp:}%{A2: mpc toggle:}<label-song>%{A}%{A}

; Used to display the state of random/repeat/repeatone/single
; Only applies if <icon-[random|repeat|repeatone|single]> is used
toggle-on-foreground = #ff
toggle-off-foreground = #55

; Only applies if <bar-progress> is used
bar-progress-width = 30
bar-progress-indicator = |
bar-progress-fill = ─
bar-progress-empty = ─
