[bar/standart]

;----- Settings -----
width = 100%
height = 25

fixed-center = true
bottom = false

background = ${colors.background}
foreground = #ffffff

line-size = 3
line-color = #f00

border-right-size = 5
border-color = ${colors.background}

padding-left = 0
padding-right = 0

; ----- Modules -----
modules-left = i3
modules-center = mpd spotify
modules-right = eth wlan vpn pulseaudio battery backlight time date

module-margin-left = 1
module-margin-right = 1

;----- Fonts -----

font-0 = UbuntuMono Nerd Font:size=12;3
font-1 = "Font Awesome 5 Free:style=Solid:pixelsize=12;3"
font-2 = "Font Awesome 5 Free:style=Regular:pixelsize=12;3"
font-3 = "Font Awesome 5 Brands:pixelsize=12;3"
font-4 = Source Han Sans JP:size=12;3
font-5 = Source Han Sans KR:size=12;3

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-mode-padding = 1
jabel-mode-foreground = #ffffff
label-mode-background = #00000000

; focused = Active workspace on focused monitor
label-focused = %icon%
; label-focused-background = ${colors.color1}
label-focused-foreground= ${colors.color1}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %icon%
label-unfocused-padding = 1

; visible = Active workspace on unfocused monitor
label-visible = %icon%
label-visible-background = ${colors.background}
label-visible-underline = #000000
label-visible-padding = 1

; urgent = Workspace with urgency hint set
label-urgent = %icon%
label-urgent-background = ${colors.background}
label-urgent-underline = #a54242
label-urgent-padding = 1

; Chinese Numerals
ws-icon-0 = 1;一
ws-icon-1 = 2;二
ws-icon-2 = 3;三
ws-icon-3 = 4;四
ws-icon-4 = 5;五
ws-icon-5 = 6;六
ws-icon-6 = 7;七
ws-icon-7 = 8;八
