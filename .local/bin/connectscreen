#!/bin/bash

intern=eDP-1
monitors=$(xrandr | grep -Ev "disconnected|eDP-1" | grep "connected" | cut -d ' ' -f1 | sed "/^\s*$/d")

if [ -z "$monitors" ]; then
    notify-send "No monitors available"
else
    selectedmonitor=$(echo "$monitors" | dmenu)
    xrandr --output $selectedmonitor --right-of $intern --auto && notify-send "Connect Monitor on $selectedmonitor"
fi


